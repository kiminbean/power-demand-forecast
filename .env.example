# ============================================================
# Power Demand Forecast API - Environment Configuration
# ============================================================
# Copy this file to .env and modify as needed

# API Settings
APP_NAME="Power Demand Forecast API"
APP_VERSION="1.0.0"
DEBUG=false

# Server Settings
HOST=0.0.0.0
PORT=8000
WORKERS=1
RELOAD=false

# Model Settings
MODEL_DIR=./models/production
DEFAULT_MODEL=conditional
SEQ_LENGTH=168

# CORS Settings
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# Logging
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Timeouts
REQUEST_TIMEOUT=30
PREDICTION_TIMEOUT=60

# Docker Compose Ports
API_PORT=8000
API_DEV_PORT=8001
NGINX_PORT=80

# ============================================================
# Email Notification Settings (Critical Alerts)
# ============================================================
# Enable/disable email notifications
EMAIL_ALERTS_ENABLED=false

# SMTP Server Settings (Gmail example)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Alert Email Settings
ALERT_SENDER_EMAIL=your-email@gmail.com
ALERT_RECIPIENT_EMAILS=admin1@example.com,admin2@example.com

# Note: For Gmail, use App Password (not regular password)
# 1. Enable 2-Step Verification: https://myaccount.google.com/security
# 2. Generate App Password: https://myaccount.google.com/apppasswords

# ============================================================
# Slack Notification Settings (All Alerts)
# ============================================================
# Enable/disable Slack notifications
SLACK_ALERTS_ENABLED=false

# Slack Incoming Webhook URL
# Create at: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Slack channel (optional, defaults to webhook's channel)
SLACK_CHANNEL=#alerts
