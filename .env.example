# ============================================================
# Power Demand Forecast API - Environment Configuration
# ============================================================
# Copy this file to .env and modify as needed

# API Settings
APP_NAME="Power Demand Forecast API"
APP_VERSION="1.0.0"
DEBUG=false

# Server Settings
HOST=0.0.0.0
PORT=8000
WORKERS=1
RELOAD=false

# Model Settings
MODEL_DIR=./models/production
DEFAULT_MODEL=conditional
SEQ_LENGTH=168

# CORS Settings
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# Logging
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Timeouts
REQUEST_TIMEOUT=30
PREDICTION_TIMEOUT=60

# Docker Compose Ports
API_PORT=8000
API_DEV_PORT=8001
NGINX_PORT=80
